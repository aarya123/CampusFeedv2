<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingTop="@dimen/activity_vertical_margin"
			android:paddingBottom="@dimen/activity_vertical_margin"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingRight="@dimen/activity_horizontal_margin">

		<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:id="@+id/eventpage_name"
				android:text="Vikings Premiere"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true"/>

		<ImageView
				android:id="@+id/imageView"
				android:src="@drawable/stock_event_image"
				android:layout_width="wrap_content"
				android:layout_height="250dp"
				android:layout_below="@id/eventpage_name"/>

		<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:id="@+id/editButton"
				android:layout_alignParentRight="true"
				android:layout_alignBottom="@id/imageView"
				android:layout_marginBottom="16dp"
				android:text="Edit"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Going"
				android:id="@+id/goingButton"
				android:layout_alignLeft="@id/imageView"
				android:layout_below="@id/imageView"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Maybe"
				android:id="@+id/maybeButton"
				android:layout_alignTop="@+id/goingButton"
				android:layout_toRightOf="@+id/goingButton"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Decline"
				android:id="@+id/declineButton"
				android:layout_alignTop="@+id/maybeButton"
				android:layout_toRightOf="@+id/maybeButton"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Invite"
				android:id="@+id/inviteButton"
				android:layout_alignTop="@+id/declineButton"
				android:layout_alignRight="@id/imageView"/>

		<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:id="@+id/dateAndTime"
				android:text="Monday, January 3 at 6 pm"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:paddingTop="@dimen/item_vertical_margin"
				android:paddingBottom="@dimen/item_vertical_margin"
				android:layout_below="@id/goingButton"/>

		<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:id="@+id/eventpage_location"
				android:text="Elliott Hall"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:paddingTop="@dimen/item_vertical_margin"
				android:paddingBottom="@dimen/item_vertical_margin"
				android:layout_below="@id/dateAndTime"/>

		<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="Lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum"
				android:id="@+id/event_page_info"
				android:paddingTop="@dimen/item_vertical_margin"
				android:paddingBottom="@dimen/item_vertical_margin"
				android:layout_below="@id/eventpage_location"/>
		
		<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Hosted by"
				android:paddingTop="@dimen/item_vertical_margin"
				android:paddingBottom="@dimen/item_vertical_margin"
				android:id="@+id/event_creator"
				android:layout_below="@id/event_page_info"/>
		
		<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Attending:"
				android:paddingTop="@dimen/item_vertical_margin"
				android:paddingBottom="@dimen/item_vertical_margin"
				android:id="@+id/event_attendees"
				android:layout_below="@id/event_creator"/>
		
		<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Event Tags: Awesomeness"
				android:paddingTop="@dimen/item_vertical_margin"
				android:paddingBottom="@dimen/item_vertical_margin"
				android:id="@+id/eventTags"
				android:layout_below="@id/event_attendees"/>

	</RelativeLayout>

</ScrollView>